<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterVehiculeActivity">

    <TextView
        android:id="@+id/titre_vehicule_ajout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CrÃ©ation"
        android:textSize="25sp"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marque : "
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titre_vehicule_ajout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />

    <EditText
        android:id="@+id/marque_vehicule"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titre_vehicule_ajout"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Immatriculation : "
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marque_vehicule"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />


    <EditText
        android:id="@+id/immat_vehicule"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marque_vehicule"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type : "
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/immat_vehicule"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />

    <EditText
        android:id="@+id/transmission_vehicule"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/immat_vehicule"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix : "
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transmission_vehicule"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />

    <EditText
        android:id="@+id/prix_vehicule"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transmission_vehicule"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        />

        <TextView
            android:id="@+id/erreur_ajout_vehciule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prix_vehicule"

            />


    <Button
        android:id="@+id/bouton_modifier"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Enregistrer"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/erreur_ajout_vehciule"
        android:onClick="AjouterVehicule"
        />

    <Button
        android:id="@+id/mon_parking"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Retour"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bouton_modifier"
        android:layout_marginTop="10dp"
        android:onClick="retourListeParking"
        />



</androidx.constraintlayout.widget.ConstraintLayout>