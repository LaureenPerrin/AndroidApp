<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifierAgence"
    android:orientation="vertical">




    <TextView
        android:id="@+id/titre_agence_visu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifications agence"
        android:textSize="25sp"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom : "
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titre_agence_visu"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"

        />

    <EditText
        android:id="@+id/new_nom_agence"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titre_agence_visu"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe : "
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_nom_agence"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"

        />


    <EditText
        android:id="@+id/new_password_agence"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_nom_agence"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"

        />



    <Button
        android:id="@+id/bouton_enregistrer_modif_agence"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Enregistrer"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/new_password_agence"
        android:onClick="enregistrerModificationAgence"

        />


    <TextView
        android:id="@+id/text_erreur_agence_modif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/bouton_enregistrer_modif_agence"

        />





</androidx.constraintlayout.widget.ConstraintLayout>